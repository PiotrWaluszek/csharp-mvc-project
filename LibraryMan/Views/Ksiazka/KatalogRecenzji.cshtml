@model IEnumerable<LibraryMan.Models.RecenzjaModel>

@{
    ViewData["Title"] = $"Recenzje ksiazki {ViewData["BookNameRecenzja"]}";
}
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="Recenzja" asp-action="Create" asp-route-BookName="@ViewData["BookNameRecenzja"]">Dodaj Recenzję </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewDate)
            </th>
            <th>
                Użytkownik
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KsiazkaModel.BookName) Piwa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{  
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UzytkownikModel.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KsiazkaModel.BookName)
        </td>
    </tr>         
}
    </tbody>
</table>

<a asp-controller="Ksiazka" asp-action="Katalog">Powrót do Katalogu Ksiazki</a>