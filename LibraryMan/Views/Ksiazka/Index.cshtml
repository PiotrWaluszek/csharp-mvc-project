@model IEnumerable<LibraryMan.Models.KsiazkaModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Ksiazki</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageRating)
            </th>
            <th>
                Wydawnictwo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WydawnictwoModel.PublisherName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
